[colors]
background = #2C2C2C
background-alt = #373B41
foreground = #C5C8C6
primary = #F0C674
blue = #4169E1
red = #e64553

[bar/example]
width = 100%
height = 24pt
radius = 6

; dpi = 96

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3pt

border-size = {{ .gap_size }}
border-bottom-size = 0
border-color = #00000000

padding-left = 0
padding-right = 0

; module-margin = 1

; separator = |
; separator-foreground = ${colors.disabled}

font-0 = mononoki:size=10;3
font-1 = Font Awesome 6 Brands,Font Awesome 6 Brands Regular:style=Regular:size=12;3
font-2 = Font Awesome 6 Free,Font Awesome 6 Free Solid:style=Solid:size=12;3
font-3 = Font Awesome 6 v4 Compatibility,Font Awesome v4 Compatibility Regular:style=Regular:size=12;3

modules-left = spotify spotify-prev spotify-play-pause spotify-next
modules-center = i3
modules-right = xkeyboard pulseaudio wired-network{{ if .device.wireless.enabled }} wireless-network{{ end }}{{ if .device.battery.enabled }} battery{{ end }} date time {{ if not .multihead.enabled }}tray{{ end }}

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true
monitor = ${env:MONITOR:}

; override-redirect = true

; wm-restack = generic
; wm-restack = bspwm
; wm-restack = i3

; override-redirect = true

{{ if .multihead.enabled }}
[bar/primary]
inherit = bar/example
modules-right = xkeyboard pulseaudio wired-network date time tray
{{- end }}

[module/systray]
type = internal/tray

format-margin = 8pt
tray-spacing = 16pt

[module/i3]
type = internal/i3

index-sort = true
enable-scroll = false

label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.blue}
label-focused-padding = 1

label-unfocused = %name%
label-unfocused-padding = 1

label-visible = %name%
label-visible-padding = 1

label-urgent = %name%
label-urgent-padding = 1

[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
format-volume-padding = 10px
format-volume-foreground = ${colors.foreground}

label-volume = %percentage%%

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

label-muted =  MUTED
label-muted-foreground = ${colors.disabled}
label-muted-padding = 10px

[module/xkeyboard]
type = internal/xkeyboard

label-layout = 
label-layout-foreground = ${colors.primary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-foreground = ${colors.background}
label-indicator-background = ${colors.red}

[base/network]
type = internal/network
; interface = {{ .device.wired }}
interval = 5

format-connected = <label-connected>
label-connected =  %upspeed%  %downspeed%

format-disconnected = <label-disconnected>
label-disconnected =  NO SIGNAL

{{- if .device.wireless.enabled }}
[module/wireless-network]
inherit = base/network
interface = {{ .device.wireless.name }}

format-connected-padding = 10px
format-disconnected-padding = 10px
format-packetloss-padding = 10px
{{ end }}

[module/wired-network]
inherit = base/network
interface = {{ .device.wired }}

format-connected-padding = 10px
format-disconnected-padding = 10x
format-packetloss-padding = 10px

[module/spotify]
type = custom/script
tail = true
interval = 1
format-prefix = 
format-prefix-padding = 10px
format = <label>
format-padding = 10px
exec = ~/.config/polybar/polybar-spotify/scroll_spotify_status.sh

[module/spotify-prev]
type = custom/script
exec = echo 
format = <label>
format-padding = 10px
click-left = playerctl previous -p spotify

[module/spotify-play-pause]
type = custom/ipc
hook-0 = echo 
hook-1 = echo 
initial = 1
click-left = playerctl play-pause -p spotify
format-padding = 10px

[module/spotify-next]
type = custom/script
exec = echo 
format = <label>
format-padding = 10px
click-left = playerctl next -p spotify

[module/date]
type = internal/date
interval = 1

date =  %Y-%m-%d

label = %date%
label-foreground = ${colors.foreground}

format-padding = 10px

[module/time]
type = internal/date
interval = 1

time =  %l:%M %p
time-alt =  %l:%M:%S %p

label = %time%
label-foreground = ${colors.foreground}

format-padding = 10px

{{- if .device.battery.enabled }}
[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD8
label-full = %percentage_raw%% (Full)

format-charging-padding = 10px
format-discharging-padding = 10px
format-full-padding = 10px
format-low-padding = 10px
{{ end }}

[module/tray]
type = internal/tray
format-padding = 10px

[settings]
screenchange-reload = true
pseudo-transparency = true
;vim:ft=dosini
